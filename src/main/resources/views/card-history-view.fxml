<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cashbacktracker.controller.CardHistoryController"
      fx:id="historyWindow"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label fx:id="titleLabel" text="История изменений" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    
    <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="categoryColumn" text="Категория" prefWidth="150"/>
            <TableColumn fx:id="cashbackColumn" text="Кэшбэк (%)" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Дата изменения" prefWidth="150"/>
            <TableColumn fx:id="changeDateColumn" text="Дата внесения изменений" prefWidth="150"/>
        </columns>
    </TableView>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Закрыть" onAction="#handleClose"/>
    </HBox>
</VBox> 